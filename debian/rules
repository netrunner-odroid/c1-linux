#!/usr/bin/make -f

export DH_VERBOSE = 1
export KCPPFLAGS += "-fno-pie"

%:
	dh $@ --parallel

override_dh_auto_configure:
	$(MAKE) VERBOSE=1 odroidc_defconfig
	dh_auto_configure

override_dh_auto_build:
	VERBOSE=1 dh_auto_build
	$(MAKE) VERBOSE=1 modules
	$(MAKE) VERBOSE=1 uImage

override_dh_auto_clean:
	$(MAKE) clean

override_dh_auto_install:
	mkdir -p debian/tmp/boot/
	VERBOSE=1 INSTALL_PATH=debian/tmp/boot/ dh_auto_install
	$(MAKE) VERBOSE=1 INSTALL_MOD_PATH=debian/tmp/ INSTALL_MOD_STRIP=1 modules_install
